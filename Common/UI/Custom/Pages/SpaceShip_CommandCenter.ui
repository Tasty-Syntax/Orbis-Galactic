@ButtonSoon = ButtonStyle(
  Default: (Background: PatchStyle(TexturePath: "PlanetIcons/soon_tm.png", Anchor: (Width: 104, Height: 145))),
);

Group #Root {
  Anchor: (Full: 1);

  // Dark background (below)
  Group #blackscreen {
    Anchor: (Full: 1);
    Background: #000000(0.3);
  }

  Group #ImageBackdrop {
    Anchor: (Width: 750, Height: 750);
    Background: (TexturePath: "galaxy.png");

    Group #ButtonContainer {
      LayoutMode: Left;
      Anchor: (Width: 950, Height: 950);

      // === ACTIVE PLANETS ===
      // Spacer
      Group { Anchor: (Width: 130, Height: 950); }
      
      // Overworld
      Group #ColOverworld {
        Anchor: (Width: 110, Height: 950);
        Padding: (Top: 60);

        Button #BtnTravelToOverworld {
          Anchor: (Width: 104, Height: 145);
          Style: ButtonStyle(
            Default: (Background: PatchStyle(TexturePath: "PlanetIcons/overworld_normal.png", Anchor: (Width: 104, Height: 145))),
            Hovered: (Background: PatchStyle(TexturePath: "PlanetIcons/overworld_active.png", Anchor: (Width: 104, Height: 145))),
            Pressed: (Background: PatchStyle(TexturePath: "PlanetIcons/overworld_pressed.png", Anchor: (Width: 104, Height: 145)))
          );
        }
      }

      // Spacer
      Group { Anchor: (Width: 20, Height: 950); }

      // Tatooine
      Group #ColTatooine {
        Anchor: (Width: 110, Height: 950);
        Padding: (Top: -200);

        Button #BtnTravelToTatooine {
          Anchor: (Width: 104, Height: 145);
          Style: ButtonStyle(
            Default: (Background: PatchStyle(TexturePath: "PlanetIcons/tatooine_normal.png", Anchor: (Width: 104, Height: 145))),
            Hovered: (Background: PatchStyle(TexturePath: "PlanetIcons/tatooine_active.png", Anchor: (Width: 104, Height: 145))),
            Pressed: (Background: PatchStyle(TexturePath: "PlanetIcons/tatooine_pressed.png", Anchor: (Width: 104, Height: 145)))
          );
        }
      }

      // Spacer
      Group { Anchor: (Width: 60, Height: 950); }

      // Ilum
      Group #ColIlum {
        Anchor: (Width: 110, Height: 950);
        Padding: (Top: -240);

        Button #BtnTravelToIlum {
          Anchor: (Width: 104, Height: 145);
          Style: ButtonStyle(
            Default: (Background: PatchStyle(TexturePath: "PlanetIcons/ilum_normal.png", Anchor: (Width: 104, Height: 145))),
            Hovered: (Background: PatchStyle(TexturePath: "PlanetIcons/ilum_active.png", Anchor: (Width: 104, Height: 145))),
            Pressed: (Background: PatchStyle(TexturePath: "PlanetIcons/ilum_pressed.png", Anchor: (Width: 104, Height: 145)))
          );
        }
      }

      // Spacer
      Group { Anchor: (Width: 60, Height: 950); }

      // === SOON PLANETS ===

      // Soon 1
      Group #ColSoon1 {
        Anchor: (Width: 104, Height: 950);
        Padding: (Top: -190);

        Button #BtnSoon1 {
          Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }

      // Spacer
      Group { Anchor: (Width: 15, Height: 950); }

      // Soon 2
      Group #ColSoon2 {
        Anchor: (Width: 104, Height: 950);
        Padding: (Top: 0);

        Button #BtnSoon2 {
          Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }

      // Spacer
      Group { Anchor: (Width: -260, Height: 950); }

      // Soon 3
      Group #ColSoon3 {
        Anchor: (Width: 104, Height: 950);
        Padding: (Top: 100);

        Button #BtnSoon3 {
           Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }
    }

    // Second container for the lower planets (separate row)
    Group #ButtonContainerBottom {
      LayoutMode: Left;
      Anchor: (Width: 950, Height: 950);

      // Spacer for Soon 4
      Group { Anchor: (Width: 300, Height: 950); }

      // Soon 4
      Group #ColSoon4 {
        Anchor: (Width: 104, Height: 950);
        Padding: (Top: 330);

        Button #BtnSoon4 {
          Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }

      // Spacer
      Group { Anchor: (Width: 80, Height: 950); }

      // Soon 5
      Group #ColSoon5 {
        Anchor: (Width: 104, Height: 950);
        Padding: (Top: 400);

        Button #BtnSoon5 {
           Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }

      // Spacer
      Group { Anchor: (Width: -260, Height: 950); }

      // Soon 6 (Top: 637)
      Group #ColSoon6 {
        Anchor: (Width: 110, Height: 950);
        Padding: (Top: 50);

        Button #BtnSoon6 {
          Anchor: (Width: 104, Height: 145);
          Style: @ButtonSoon;
        }
      }
    }
  }
}
